<h1>My Blog!</h1>
<% @posts.each do |post| %>
  <h2><%= link_to post.title, post %></h2>
  <div class="entry">
    <%= post.body %>
    <%= link_to "Edit", edit_post_path(post) %>
    <%= button_to "Delete", post_path(post),
        method: :delete,
        data: { confirm: "Are you sure?" } %>
    <hr>
  </div>
<% end %>
<%= link_to "New Post", new_post_path %>